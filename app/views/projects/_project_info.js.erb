$("#project-info-<%= @project.section %>").html("<%= raw escape_javascript(render(partial: "projects/project_info.html.slim", locals: { project: @project })) %>")

// highlight the project on the side
$(".highlighted-project").removeClass("highlighted-project");
$(".project-<%= @project.section %>").addClass("highlighted-project");
$("#project-<%= @project.uid %>").removeClass("highlighted-project");

// scroll to section
$("html, body").animate({
  scrollTop: $("#project-section-title-<%= @project.section %>").offset().top - 60
}, 500);
