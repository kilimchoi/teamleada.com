= render partial: "users/user", locals: { user: user, is_admin: false, is_editing: false, is_company: true }

.container-fluid
  .row
    .col-md-12
      .row.card
        .col-md-12
          #user-attributes

javascript:
  $(document).ready(function() {
    $('#user-attributes').highcharts({
      chart: {
          polar: true,
          type: 'line'
      },
      title: {
          text: 'User Skill Profile',
          x: -80,
      },
      pane: {
        size: '85%'
      },
      xAxis: {
          categories: ['Computer Science Ability', 'Statistical Ability', 'Experience', 'Curiosity', 'Thoroughness'],
          tickmarkPlacement: 'on',
          lineWidth: 0
      },
      yAxis: {
          gridLineInterpolation: 'polygon',
          lineWidth: 0,
          min: 0
      },
      tooltip: {
        shared: true,
          pointFormat: '<span style="color:{series.color}">{series.name}: <b>${point.y:,.0f}</b><br/>'
      },
      legend: {
          align: 'right',
          verticalAlign: 'top',
          y: 70,
          layout: 'vertical'
      },
      series: [{
          name: 'Starting Skill Level',
          data: [2, 1, 3, 2, 2],
          pointPlacement: 'on'
      }, {
          name: 'Current Skill Level',
          data: [4, 2.5, 3.25, 5, 2.5],
          pointPlacement: 'on'
      }]
  });
  })
